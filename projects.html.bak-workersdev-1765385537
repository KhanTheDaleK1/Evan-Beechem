    <script>
      // Minimal, robust OctoPrint status updater for beechem.site
      const BEECH_OCTO_URL = "/octoprint-api/job";

      async function beechemUpdateOctoprint() {
        try {
          const resp = await fetch(BEECH_OCTO_URL, { cache: "no-store" });
          if (!resp.ok) {
            console.error("[OctoPrint] HTTP error:", resp.status);
            throw new Error("HTTP " + resp.status);
          }

          const data = await resp.json();
          const state = data.state || "UNKNOWN";
          const progress = (data.progress && data.progress.completion) || 0;
          const job = data.job || {};
          const file = job.file || {};
          const name = file.display || file.name || "No File Loaded";

          const statusEl = document.getElementById("octo-status");
          const fileEl = document.getElementById("octo-file");

          if (statusEl) {
            let txt = "STATUS: " + String(state).toUpperCase();
            if (String(state).toLowerCase() === "printing") {
              txt += " (" + Math.round(progress) + "%)";
            }
            statusEl.textContent = txt;
          }

          if (fileEl) {
            fileEl.textContent = "File: " + name;
          }
        } catch (e) {
          console.error("[OctoPrint] API error:", e);
          const statusEl = document.getElementById("octo-status");
          if (statusEl) {
            statusEl.textContent = "STATUS: DISCONNECTED (API)";
          }
          const fileEl = document.getElementById("octo-file");
          if (fileEl) {
            fileEl.textContent = "File: ---";
          }
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        // Kick once, then every 5s
        beechemUpdateOctoprint();
        setInterval(beechemUpdateOctoprint, 5000);
      });
    </script>
